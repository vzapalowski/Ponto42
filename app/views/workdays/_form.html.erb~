<%= simple_form_for(@workday) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :day %>
    <%= @workday.periods.each do |period| %>
      <%= render 'periods/form' , :f => period %>
    <% end %>
    <%= f.check_box :_destroy %>
    <%= f.label :_destroy , "Remove Workday" %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
